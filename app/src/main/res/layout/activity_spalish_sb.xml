<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_flash_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF" >


    <ImageView
        android:id="@+id/flash_logo"
        android:layout_width="@dimen/base_dimen_450"
        android:layout_height="@dimen/base_dimen_260"
        android:src="@mipmap/flash_logo_hs"
        android:layout_marginTop="@dimen/base_dimen_300"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0061ae"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:textSize="@dimen/base_dimen_40"
        android:text="打造全球顶尖的音视频平台"
        />


</LinearLayout>