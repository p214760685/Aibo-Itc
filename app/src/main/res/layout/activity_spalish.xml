<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_flash_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/flash_bg_itc" >

    <ImageView
        android:id="@+id/flash_right"
        android:layout_width="@dimen/base_dimen_120"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:scaleType="fitStart"
        android:visibility="gone"
        android:src="@mipmap/flash_1" />

    <ImageView
        android:id="@+id/flash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_itc_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_200"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flash_small_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/flash_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_50"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flash_bottom_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/base_dimen_90"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/logo_itc2" />

            <TextView
                android:id="@+id/flash_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/copyright_str"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_24"
                android:visibility="gone"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/flash_bottom_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/copyright_itc"
            android:layout_alignParentBottom="true"
            />
    </LinearLayout>
</RelativeLayout>