<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_dimen_40"
        android:paddingRight="@dimen/base_dimen_40">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你好，admin"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_44" />

        <ImageView
            android:id="@+id/home_menu_layout_7"
            android:layout_width="@dimen/base_dimen_48"
            android:layout_height="@dimen/base_dimen_48"
            android:src="@mipmap/icon_home_head" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_dimen_48"
            android:paddingRight="@dimen/base_dimen_48"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.haozi.dev.smartframe.view.AnimationLinearLayout
                    android:id="@+id/home_menu_layout_1"
                    android:layout_width="@dimen/base_dimen_288"
                    android:layout_height="@dimen/base_dimen_288"
                    android:background="@drawable/bg_new_home_shout"
                    android:padding="@dimen/base_dimen_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_home_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/base_dimen_16"
                        android:paddingTop="@dimen/base_dimen_24">

                        <ImageView
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:src="@mipmap/icon_home_shout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_dimen_24"
                            android:text="寻呼喊话"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/base_dimen_32" />

                    </LinearLayout>

                </com.haozi.dev.smartframe.view.AnimationLinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <com.haozi.dev.smartframe.view.AnimationLinearLayout
                    android:id="@+id/home_menu_layout_2"
                    android:layout_width="@dimen/base_dimen_288"
                    android:layout_height="@dimen/base_dimen_288"
                    android:background="@drawable/bg_new_home_file"
                    android:padding="@dimen/base_dimen_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_home_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/base_dimen_16"
                        android:paddingTop="@dimen/base_dimen_24">

                        <ImageView
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:src="@mipmap/icon_home_file" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_dimen_24"
                            android:text="文件点播"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/base_dimen_32" />

                    </LinearLayout>

                </com.haozi.dev.smartframe.view.AnimationLinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_48"
                android:orientation="horizontal">

                <com.haozi.dev.smartframe.view.AnimationLinearLayout
                    android:id="@+id/home_menu_layout_3"
                    android:layout_width="@dimen/base_dimen_288"
                    android:layout_height="@dimen/base_dimen_288"
                    android:background="@drawable/bg_new_home_upload"
                    android:padding="@dimen/base_dimen_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_home_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/base_dimen_16"
                        android:paddingTop="@dimen/base_dimen_24">

                        <ImageView
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:src="@mipmap/icon_home_upload" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_dimen_24"
                            android:text="文件上传"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/base_dimen_32" />

                    </LinearLayout>

                </com.haozi.dev.smartframe.view.AnimationLinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <com.haozi.dev.smartframe.view.AnimationLinearLayout
                    android:id="@+id/home_menu_layout_4"
                    android:layout_width="@dimen/base_dimen_288"
                    android:layout_height="@dimen/base_dimen_288"
                    android:background="@drawable/bg_new_home_about"
                    android:padding="@dimen/base_dimen_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_home_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/base_dimen_16"
                        android:paddingTop="@dimen/base_dimen_24">

                        <ImageView
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:src="@mipmap/icon_home_about" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_dimen_24"
                            android:text="优先级"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/base_dimen_32" />

                    </LinearLayout>

                </com.haozi.dev.smartframe.view.AnimationLinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_48"
                android:orientation="horizontal">

                <com.haozi.dev.smartframe.view.AnimationLinearLayout
                    android:id="@+id/home_menu_layout_5"
                    android:layout_width="@dimen/base_dimen_288"
                    android:layout_height="@dimen/base_dimen_288"
                    android:background="@drawable/bg_new_home_close"
                    android:padding="@dimen/base_dimen_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_home_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/base_dimen_16"
                        android:paddingTop="@dimen/base_dimen_24">

                        <ImageView
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:src="@mipmap/icon_home_close" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_dimen_24"
                            android:text="注销"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/base_dimen_32" />

                    </LinearLayout>

                </com.haozi.dev.smartframe.view.AnimationLinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <com.haozi.dev.smartframe.view.AnimationLinearLayout
                    android:id="@+id/home_menu_layout_6"
                    android:layout_width="@dimen/base_dimen_288"
                    android:layout_height="@dimen/base_dimen_288"
                    android:background="@drawable/bg_new_home_exit"
                    android:padding="@dimen/base_dimen_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_home_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/base_dimen_16"
                        android:paddingTop="@dimen/base_dimen_24">

                        <ImageView
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:src="@mipmap/icon_home_exit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_dimen_24"
                            android:text="退出"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/base_dimen_32" />

                    </LinearLayout>

                </com.haozi.dev.smartframe.view.AnimationLinearLayout>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>