<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_view" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/base_dimen_240" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="版本号：1.0.0"
        android:textColor="#333333"
        android:textSize="@dimen/base_dimen_28"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#255B7D"
        android:paddingLeft="@dimen/base_dimen_32"
        android:paddingTop="@dimen/base_dimen_30"
        android:paddingBottom="@dimen/base_dimen_30"
        android:text="设置优先级"
        android:textColor="@color/white"
        android:textSize="@dimen/base_dimen_32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_dimen_32"
        android:paddingRight="@dimen/base_dimen_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻呼喊话优先级"
            android:textColor="@color/app_color"
            android:textSize="@dimen/base_dimen_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:orientation="vertical">

            <EditText
                android:id="@+id/shout_prior"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_96"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入优先级"
                android:inputType="phone"
                android:paddingLeft="@dimen/base_dimen_10"
                android:paddingRight="@dimen/base_dimen_10"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/base_dimen_32"
                android:digits="0123456789"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_2"
        android:background="#dcdcdc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_dimen_32"
        android:paddingRight="@dimen/base_dimen_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件点播优先级"
            android:textColor="@color/app_color"
            android:textSize="@dimen/base_dimen_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:orientation="vertical">

            <EditText
                android:id="@+id/play_prior"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_96"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入优先级"
                android:inputType="phone"
                android:paddingLeft="@dimen/base_dimen_10"
                android:paddingRight="@dimen/base_dimen_10"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/base_dimen_32"
                android:digits="0123456789"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_2"
        android:background="#dcdcdc"
        />


    <com.haozi.dev.smartframe.view.AnimationLinearLayout
        android:id="@+id/set_prior"
        android:layout_width="@dimen/base_dimen_600"
        android:layout_height="@dimen/base_dimen_96"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_new_login_btn"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_36" />

    </com.haozi.dev.smartframe.view.AnimationLinearLayout>


</LinearLayout>